---
export interface Props {
  /** Post title */
  title: string;
  /** ISO or human date string */
  date: string;
  /** Array of tag keywords */
  tags?: string[];
}

const { title, date, tags = [] } = Astro.props as Props;
---

<section class="mx-auto max-w-3xl px-6 py-10">
  <header class="mb-8">
    <h1 class="text-3xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100">
      {title}
    </h1>
    <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-400">
      {new Date(date).toLocaleDateString(undefined, {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </p>
    {tags.length && (
      <ul class="mt-4 flex flex-wrap gap-2">
        {tags.map((tag) => (
          <li class="rounded bg-zinc-200 px-2 py-1 text-xs font-medium text-zinc-700 dark:bg-zinc-700 dark:text-zinc-200" key={tag}>{tag}</li>
        ))}
      </ul>
    )}
  </header>

  <article class="prose dark:prose-invert max-w-none">
    <slot />
  </article>
</section>
